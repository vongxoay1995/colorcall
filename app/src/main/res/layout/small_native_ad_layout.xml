<?xml version="1.0" encoding="utf-8"?>
<com.google.android.gms.ads.formats.UnifiedNativeAdView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/_5sdp">

            <TextView
                android:id="@+id/txt_label_ads"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#f7b32b"
                android:padding="1dp"
                android:text="Ad"
                android:textColor="@color/white"
                android:textSize="@dimen/_7sdp" />

            <RelativeLayout
                android:layout_below="@id/txt_label_ads"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/ad_icon"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:layout_marginEnd="10dp"
                    android:background="#fff" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@id/ad_call_to_action"
                    android:layout_toEndOf="@id/ad_icon"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/ad_headline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="headline"
                        android:maxLines="2"
                        android:textColor="#000000"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/ad_advertiser"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="advertiser"
                        android:maxLines="2"
                        android:textColor="#8c8c8c" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:layout_marginTop="@dimen/_1sdp"
                            android:id="@+id/layout_rate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <RatingBar
                                android:id="@+id/ad_rating"
                                style="?android:attr/ratingBarStyleSmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:isIndicator="true"
                                android:numStars="5"
                                android:stepSize="0.5" />

                            <TextView
                                android:gravity="center"
                                android:id="@+id/ad_price"
                                android:layout_width="@dimen/_38sdp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:layout_toEndOf="@id/ad_rating"
                                android:background="#0a9d58"
                                android:paddingLeft="@dimen/_5sdp"
                                android:paddingRight="@dimen/_5sdp"
                                android:text="Miễn phí"
                                android:textSize="@dimen/_7sdp"
                                android:maxLines="1"
                                android:textColor="#fff" />

                            <TextView
                                android:gravity="center"
                                android:id="@+id/ad_store"
                                android:layout_width="@dimen/_48sdp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:layout_toEndOf="@id/ad_price"
                                android:background="@drawable/bg_small_native_google_play"
                                android:paddingLeft="@dimen/_2sdp"
                                android:paddingRight="@dimen/_2sdp"
                                android:text="Google play"
                                android:maxLines="1"
                                android:textSize="@dimen/_7sdp"
                                android:textColor="#0a9d58" />
                        </RelativeLayout>

                        <TextView
                            android:id="@+id/ad_body"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="2"
                            android:text="body of ad"
                            android:textColor="#000000"
                            android:textSize="@dimen/_9sdp" />
                    </LinearLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/ad_call_to_action"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/bg_native_banner"
                    android:text="Tìm hiểu thêm"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/_10sdp" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</com.google.android.gms.ads.formats.UnifiedNativeAdView>